{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "removeComments": false,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "noEmit": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "baseUrl": ".",
      "rootDir": ".",
      "allowJs": true,
      "resolveJsonModule": true,
      "typeRoots": ["node_modules/@types"]
    },
    "include": ["./**/*", "./**/.*"],
    "compileOnSave": false
  }
  